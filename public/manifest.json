{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Career Copilot",
  "description": "AI-powered career copilot: Optimize, track, and receive tailored insights for a guided success story.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo192.png",
      "128": "logo512.png"
    },
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}